function R_AbyssSearchLever (Setting : Integer; LeverArray : TIntegerArray) : Boolean;
var
  i : Integer;
begin
  if not LoggedIn then
    Exit;
  Result := False;
  for i:=0 to high (LeverArray) do
  begin
    if LeverArray[i] = Setting then
    begin
      Result := True;
      R_Debug('Found matching setting', 'Abyss');
      Exit;
    end;
  end;
end;

