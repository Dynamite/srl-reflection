function R_SolveAbyss : Boolean;
var Direction : String;
begin
  if not LoggedIn then
    Exit;
  Result := False;
  Direction := ''; // Failsafe
  if R_InAbyss then
  begin
    R_AbyssDetermineLever (Direction);
    if Direction = '' then R_Debug('Failed getting proper appendage in Abyssal random. Please report this to reflection developers!', 'Abyss')
    else
    begin
      if Direction = 'n' then Result := R_AbyssPullLever(R_ABYSS_LEVER_N)
        else if Direction = 's' then Result := R_AbyssPullLever(R_ABYSS_LEVER_S)
          else if Direction = 'e' then Result := R_AbyssPullLever(R_ABYSS_LEVER_E)
            else if Direction = 'w' then Result := R_AbyssPullLever(R_ABYSS_LEVER_W);
    end;
  end else R_Debug('Not in Abyss random!', 'Abyss');
end;
